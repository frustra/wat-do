#item.modal-inner
  form.editable(js-form="saveItem")
    .icon-ok#done
    input(type='checkbox', name='item-done', js-data='done', style='display: none;')
    #name-wrap
      input(type='text', name='item-name', js-data='name', class='big full-width', placeholder='Name')
    textarea(name='item-description', js-data='desc', class='medium full-width', placeholder='Description')

    input(type='text', name='start-date', js-data='start', class='medium', placeholder='Start Date')
    input(type='text', name='end-date', js-data='end', class='medium', placeholder='Due Date')

    div#buttons
      input(type='button', id='cancel', value='Cancel', class='btn medium')
      input(type='submit', id='save', value='Save', class='btn medium')
