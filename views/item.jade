#item.modal-inner
  form.editable(js-form="saveItem")
    .icon-ok#done
    input(type='checkbox', name='item-done', js-data='done', style='display: none;')
    #name-wrap
      input.big.full-width(type='text', name='item-name', js-data='name', placeholder='Name')
    textarea.medium.full-width(name='item-description', js-data='desc', placeholder='Description')

    input.medium(type='text', name='start-date', js-data='start', placeholder='Start Date')
    input.medium(type='text', name='end-date', js-data='end', placeholder='Due Date')

    div#buttons
      input.btn-delete.btn.medium(type='button', value='Delete')
      input.btn-cancel.btn.medium(type='button', value='Cancel')
      input.btn-save.btn.medium(type='submit', value='Save')
