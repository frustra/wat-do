#list.modal-inner
  form.editable(js-form="saveList")
    input.big.full-width(type='text', name='list-name', js-data='name', placeholder='List Name')
    
    label.checkbox
      input#public.medium(type='checkbox', name='list-public', js-data='public')
      | List is Public
    label.readonly#sharelink
      | Share Link:
      input.medium.full-width.link(type='text', readonly="readonly", name='list-share', js-data='share')

    hr

    p List Memebers go here

    #buttons
      .left-group
        input.btn-delete.btn.medium(type='button', value='Delete')
      .right-group
        input.btn-save.btn.medium(type='submit', value='Save')
        input.btn-cancel.btn.medium(type='button', value='Cancel')
